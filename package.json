{
  "name": "immowaechter",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "clean": "rimraf node_modules .next apps/web/node_modules apps/web/.next",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "docker:build": "docker build -t immowaechter/app .",
    "docker:run": "docker run -p 3000:3000 immowaechter/app",
    "docker:compose": "docker-compose -f docker-compose.ci.yml up -d",
    "docker:compose:down": "docker-compose -f docker-compose.ci.yml down",
    "ci:test": "npm run lint && npm run test --workspace=apps/web && npm run test:e2e",
    "ci:build": "npm run build && npm run docker:build",
    "ci:deploy": "npm run ci:test && npm run ci:build"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.8.1",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/supabase-js": "^2.75.1",
    "@vercel/analytics": "^1.5.0",
    "resend": "^6.2.0"
  }
}
